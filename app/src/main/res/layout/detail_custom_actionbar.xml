<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/charticon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorButton"
        android:backgroundTint="@color/colorButton"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/backtomenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#00ffffff"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/backtomenu"
            android:layout_toEndOf="@+id/backtomenu"
            android:text="KETA XSIS RESTAURANT"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/actChart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView16"
            android:layout_marginEnd="17dp"
            android:background="#dcbb00"
            android:text="0"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnChart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/textView16"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:background="@mipmap/ic_shopping_cart_white_18dp" />



    </RelativeLayout>
</android.support.constraint.ConstraintLayout>